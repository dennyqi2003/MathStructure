{
  "structure": [
    {
      "type": "Hint",
      "text": "Exercise 3.7.2"
    },
    {
      "type": "Fix",
      "variable": [
        "$V$",
        "$F$"
      ],
      "condition": [
        "$V$ is a vector space over an infinite field $F$"
      ],
      "scope": [
        {
          "type": "Show",
          "proposition": [
            "$V$ is not the union of finitely many proper subspaces"
          ],
          "method": [
            "contradiction"
          ],
          "scope": [
            {
              "type": "Show",
              "proposition": [
                "If $V$ is the set-theoretic union of $n$ proper subspaces $W_i$ ( $1 \\leq i \\leq n$ ), then $|F| \\leq n-1$"
              ],
              "method": null,
              "scope": [
                {
                  "type": "Fix",
                  "variable": [
                    "$n$",
                    "$W_1, ..., W_n$"
                  ],
                  "condition": [
                    "$n$ is a positive integer",
                    "$W_1, ..., W_n$ are proper subspaces of $V$",
                    "$V = \\bigcup_{i=1}^n W_i$"
                  ],
                  "scope": [
                    {
                      "type": "Assume",
                      "assumption": [
                        "no $W_i$ is contained in the union of the other subspaces"
                      ],
                      "scope": [
                        {
                          "type": "Fix",
                          "variable": [
                            "$i$"
                          ],
                          "condition": [
                            "$i \\in \\{1, ..., n\\}$"
                          ],
                          "scope": [
                            {
                              "type": "Obtain",
                              "obtained_variable": [
                                "$u$",
                                "$v$"
                              ],
                              "condition": [
                                "$u \\in W_i$",
                                "$u \\notin \\bigcup_{j \\neq i} W_j$",
                                "$v \\notin W_i$"
                              ],
                              "reason": null
                            },
                            {
                              "type": "Have",
                              "claim": [
                                "$(v+F u) \\cap W_i=\\varnothing$"
                              ],
                              "reason": null
                            },
                            {
                              "type": "Have",
                              "claim": [
                                "$\\forall j \\in \\{1, ..., n\\} \\setminus \\{i\\}, |(v+F u) \\cap W_j| \\leq 1$"
                              ],
                              "reason": [
                                "since otherwise $W_j$ would contain $u$"
                              ]
                            },
                            {
                              "type": "CalculationChain",
                              "initial_expression": [
                                "|v+F u|"
                              ],
                              "step": [
                                {
                                  "operator": "=",
                                  "expression": [
                                    "|F|"
                                  ],
                                  "reason": null
                                },
                                {
                                  "operator": "<=",
                                  "expression": [
                                    "n-1"
                                  ],
                                  "reason": null
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "Have",
              "claim": [
                "This is a contradiction."
              ],
              "reason": [
                "The result $|F| \\leq n-1$ contradicts the given condition that $F$ is an infinite field."
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Hint",
      "text": "Corollary: Avoidance lemma for vector spaces."
    },
    {
      "type": "Have",
      "claim": [
        "For any vector space E over an infinite field, if a subspace is contained in a finite union of subspaces, it is contained in one of them."
      ],
      "reason": null
    }
  ]

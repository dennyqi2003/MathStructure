{
  "structure": [
    {
      "type": "Hint",
      "text": "3.132 matrix of T' is transpose of matrix of T"
    },
    {
      "type": "Fix",
      "variable": [
        "$V$",
        "$W$",
        "$T$",
        "$v_1, ..., v_n$",
        "$\\varphi_1, ..., \\varphi_n$",
        "$w_1, ..., w_m$",
        "$\\psi_1, ..., \\psi_m$"
      ],
      "condition": [
        "$V$ and $W$ are finite-dimensional vector spaces",
        "$T \\in \\mathcal{L}(V,W)$",
        "$v_1, ..., v_n$ is a basis of $V$",
        "$\\varphi_1, ..., \\varphi_n$ is the dual basis of $v_1, ..., v_n$",
        "$w_1, ..., w_m$ is a basis of $W$",
        "$\\psi_1, ..., \\psi_m$ is the dual basis of $w_1, ..., w_m$"
      ],
      "scope": [
        {
          "type": "Show",
          "proposition": [
            "$\\mathcal{M}(T') = (\\mathcal{M}(T))^{t}$"
          ],
          "method": null,
          "scope": [
            {
              "type": "Define",
              "term": "$A$",
              "definition": "$A = \\mathcal{M}(T)$"
            },
            {
              "type": "Define",
              "term": "$C$",
              "definition": "$C = \\mathcal{M}(T')$"
            },
            {
              "type": "Fix",
              "variable": [
                "$j$",
                "$k$"
              ],
              "condition": [
                "$1 \\leq j \\leq m$",
                "$1 \\leq k \\leq n$"
              ],
              "scope": [
                {
                  "type": "Have",
                  "claim": [
                    "$T'(\\psi_j) = \\sum_{r=1}^n C_{r,j} \\varphi_r$"
                  ],
                  "reason": [
                    "the definition of $\\mathcal{M}(T')$"
                  ]
                },
                {
                  "type": "CalculationChain",
                  "initial_expression": [
                    "$(\\psi_j \\circ T)(v_k)$"
                  ],
                  "step": [
                    {
                      "operator": "=",
                      "expression": [
                        "$\\sum_{r=1}^n C_{r,j} \\varphi_r(v_k)$"
                      ],
                      "reason": [
                        "The left side of $T'(\\psi_j) = \\sum_{r=1}^n C_{r,j} \\varphi_r$ equals $\\psi_j \\circ T$, and applying both sides to $v_k$"
                      ]
                    },
                    {
                      "operator": "=",
                      "expression": [
                        "$C_{k,j}$"
                      ],
                      "reason": null
                    }
                  ]
                },
                {
                  "type": "CalculationChain",
                  "initial_expression": [
                    "$(\\psi_j \\circ T)(v_k)$"
                  ],
                  "step": [
                    {
                      "operator": "=",
                      "expression": [
                        "$\\psi_j(T v_k)$"
                      ],
                      "reason": null
                    },
                    {
                      "operator": "=",
                      "expression": [
                        "$\\psi_j \\left( \\sum_{r=1}^m A_{r,k} w_r \\right)$"
                      ],
                      "reason": null
                    },
                    {
                      "operator": "=",
                      "expression": [
                        "$\\sum_{r=1}^m A_{r,k} \\psi_j(w_r)$"
                      ],
                      "reason": null
                    },
                    {
                      "operator": "=",
                      "expression": [
                        "$A_{j,k}$"
                      ],
                      "reason": null
                    }
                  ]
                },
                {
                  "type": "Have",
                  "claim": [
                    "$C_{k,j} = A_{j,k}$"
                  ],
                  "reason": [
                    "Comparing the last line of the last two sets of equations"
                  ]
                }
              ]
            },
            {
              "type": "Have",
              "claim": [
                "$C = A^{t}$"
              ],
              "reason": null
            },
            {
              "type": "Have",
              "claim": [
                "$\\mathcal{M}(T') = (\\mathcal{M}(T))^{t}$"
              ],
              "reason": null
            }
          ]
        }
      ]
    }
  ]
}
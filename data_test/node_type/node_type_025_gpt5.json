{
  "ProofStructure": [
    {
      "type": "Fix",
      "var_list": [
        "f",
        "a",
        "b"
      ],
      "condition": [
        "f(x) is continuous on [a,b]",
        "f(a)\\cdot f(b) < 0"
      ]
    },
    {
      "type": "Show",
      "proposition": [
        "There exists a \\xi \\in (a,b) such that f(\\xi) = 0"
      ]
    },
    {
      "type": "Assume",
      "assumption": [
        "Without loss of generality, f(a) < 0 and f(b) > 0"
      ]
    },
    {
      "type": "Define",
      "symbol": "$V$",
      "meaning": [
        "$V = \\{ x \\mid f(x) < 0, x \\in [a, b] \\}$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "$V$ is bounded and non-empty, so it has a supremum"
      ],
      "reasons": []
    },
    {
      "type": "Define",
      "symbol": "$\\xi$",
      "meaning": [
        "$\\xi = \\sup V$"
      ]
    },
    {
      "type": "Show",
      "proposition": [
        "$\\xi \\in (a,b)",
        "$f(\\xi) = 0$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "There exists $\\delta_1 > 0$ such that for all $x \\in [a, a+\\delta_1]$, $f(x) < 0$"
      ],
      "reasons": [
        "Due to the continuity of $f(x)$ and the fact that $f(a) < 0$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "There exists $\\delta_2 > 0$ such that for all $x \\in [b-\\delta_2, b]$, $f(x) > 0$"
      ],
      "reasons": [
        "Similarly, since $f(b) > 0$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "$a + \\delta_1 \\le \\xi \\le b - \\delta_2$"
      ],
      "reasons": []
    },
    {
      "type": "Have",
      "proposition": [
        "$\\xi \\in (a,b)$"
      ],
      "reasons": [
        "$a + \\delta_1 \\le \\xi \\le b - \\delta_2$"
      ]
    },
    {
      "type": "Fix",
      "var_list": [
        "x_n"
      ],
      "condition": [
        "$x_n \\in V$ for $n=1,2,\\ldots$",
        "$x_n \\to \\xi$ as $n \\to \\infty$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "$f(\\xi) = \\lim_{n \\to \\infty} f(x_n) \\le 0$"
      ],
      "reasons": [
        "Since $f(x_n) < 0$"
      ]
    },
    {
      "type": "Assume",
      "assumption": [
        "$f(\\xi) < 0$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "There exists $\\delta > 0$ such that for all $x \\in (\\xi - \\delta, \\xi + \\delta)$, $f(x) < 0$"
      ],
      "reasons": [
        "Due to the continuity of $f(x)$ at $\\xi$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "contradiction"
      ],
      "reasons": [
        "$\\xi = \\sup V$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "$f(\\xi) = 0$"
      ],
      "reasons": []
    }
  ]
}
{
  "ProofStructure": [
    {
      "type": "Show",
      "proposition": [
        "The function $f(x)=\\sin x$ is continuous on $(-\\infty,+\\infty)$"
      ]
    },
    {
      "type": "Fix",
      "var_list": [
        "x_0"
      ],
      "condition": [
        "$x_0\\in(-\\infty,+\\infty)$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "$|\\sin x-\\sin x_0|=2\\left|\\cos \\frac{x+x_0}{2}\\,\\sin \\frac{x-x_0}{2}\\right|\\le |x-x_0|$"
      ],
      "reasons": []
    },
    {
      "type": "Fix",
      "var_list": [
        "ε"
      ],
      "condition": [
        "$\\epsilon>0$"
      ]
    },
    {
      "type": "Define",
      "symbol": "δ",
      "meaning": [
        "$\\delta=\\epsilon$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "When $|x-x_0|<\\delta$, $|\\sin x-\\sin x_0|\\le |x-x_0|<\\epsilon$"
      ],
      "reasons": []
    },
    {
      "type": "Have",
      "proposition": [
        "Therefore, $f(x)=\\sin x$ is continuous on $(-\\infty,+\\infty)$"
      ],
      "reasons": []
    }
  ]
}
{
  "ProofStructure": [
    {
      "type": "Show",
      "proposition": [
        "There exist infinitely many positive integers $n$ such that $n^2+1$ has a prime divisor greater than $2n+\\sqrt{10n}$."
      ]
    },
    {
      "type": "Fix",
      "var_list": [
        "p"
      ],
      "condition": [
        "$p\\equiv 1 \\pmod{8}$",
        "$p$ is prime"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "The congruence $x^2 \\equiv -1 \\pmod{p}$ has two solutions in $[1,p-1]$ whose sum is $p$."
      ],
      "reasons": []
    },
    {
      "type": "Fix",
      "var_list": [
        "n"
      ],
      "condition": [
        "$n$ is the smaller solution in $[1,p-1]$ to $x^2 \\equiv -1 \\pmod{p}$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "$p$ divides $n^2+1$",
        "$n \\le \\frac{p-1}{2}$"
      ],
      "reasons": []
    },
    {
      "type": "Show",
      "proposition": [
        "$p > 2n + \\sqrt{10n}$"
      ]
    },
    {
      "type": "Fix",
      "var_list": [
        "\\ell"
      ],
      "condition": [
        "$n = \\frac{p-1}{2} - \\ell$",
        "$\\ell \\ge 0$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "$n^2 \\equiv -1 \\pmod{p}$"
      ],
      "reasons": [
        "$p \\mid n^2+1$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "\\left(\\frac{p-1}{2} - \\ell\\right)^2 \\equiv -1 \\pmod{p}"
      ],
      "reasons": [
        "$n^2 \\equiv -1 \\pmod{p}$",
        "$n = \\frac{p-1}{2} - \\ell$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "$(2\\ell+1)^2 + 4 \\equiv 0 \\pmod{p}$"
      ],
      "reasons": []
    },
    {
      "type": "Fix",
      "var_list": [
        "r"
      ],
      "condition": [
        "$(2\\ell+1)^2 + 4 = r p$",
        "$r \\ge 0$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "$(2\\ell+1)^2 \\equiv 1 \\pmod{8} \\equiv p \\pmod{8}$"
      ],
      "reasons": [
        "$p \\equiv 1 \\pmod{8}$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "$r \\equiv 5 \\pmod{8}$"
      ],
      "reasons": []
    },
    {
      "type": "Have",
      "proposition": [
        "$r \\ge 5$"
      ],
      "reasons": []
    },
    {
      "type": "Have",
      "proposition": [
        "$(2\\ell+1)^2 + 4 \\ge 5p$"
      ],
      "reasons": []
    },
    {
      "type": "Have",
      "proposition": [
        "\\ell \\ge \\frac{\\sqrt{5p - 4} - 1}{2}"
      ],
      "reasons": []
    },
    {
      "type": "Define",
      "symbol": "u",
      "meaning": [
        "$u = \\sqrt{5p - 4}$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "\\ell \\ge \\frac{u - 1}{2}"
      ],
      "reasons": []
    },
    {
      "type": "Have",
      "proposition": [
        "$n = \\frac{p-1}{2} - \\ell \\le \\tfrac{1}{2}(p - u)$"
      ],
      "reasons": []
    },
    {
      "type": "Have",
      "proposition": [
        "$p = \\frac{u^2 + 4}{5}$"
      ],
      "reasons": []
    },
    {
      "type": "Have",
      "proposition": [
        "$u^2 - 5u - 10n + 4 \\ge 0$"
      ],
      "reasons": []
    },
    {
      "type": "Have",
      "proposition": [
        "$u \\ge \\frac{5 + \\sqrt{40n + 9}}{2}$"
      ],
      "reasons": [
        "Solving this quadratic inequality with respect to $u \\ge 0$"
      ]
    },
    {
      "type": "Have",
      "proposition": [
        "$p \\ge 2n + u \\ge 2n + \\tfrac{1}{2}(5 + \\sqrt{40n + 9}) > 2n + \\sqrt{10n}$"
      ],
      "reasons": []
    },
    {
      "type": "Have",
      "proposition": [
        "There are infinitely many primes of the form $8k+1$"
      ],
      "reasons": []
    },
    {
      "type": "Have",
      "proposition": [
        "There exist infinitely many positive integers $n$ such that $n^2+1$ has a prime divisor greater than $2n+\\sqrt{10n}$"
      ],
      "reasons": [
        "There are infinitely many primes of the form $8k+1$"
      ]
    }
  ]
}
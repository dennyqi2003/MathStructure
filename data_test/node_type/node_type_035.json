{
  "ProofStructure": [
    {
      "condition": [
        "a_0,a_1,a_2,\\ldots\\text{ 是正整数序列}",
        "对所有 i\\ge 0,\\;\\gcd(a_i,a_{i+1})>a_{i-1}"
      ],
      "type": "Fix",
      "var_list": [
        "a_0,a_1,a_2,\\ldots"
      ]
    },
    {
      "proposition": [
        "$a_n\\ge 2^n\\;(n\\ge 0)$"
      ],
      "type": "Show"
    },
    {
      "proposition": [
        "$a_i\\ge \\gcd(a_i,a_{i+1})>a_{i-1}$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "序列严格递增"
      ],
      "reasons": [
        "$a_i> a_{i-1}$"
      ],
      "type": "Have"
    },
    {
      "proposition": [
        "$a_0\\ge 1$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "$a_1\\ge 2$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "$a_{i+1}-a_i\\ge \\gcd(a_i,a_{i+1})>a_{i-1}$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "$a_{i+1}\\ge a_i+a_{i-1}+1$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "$a_2\\ge 4$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "$a_3\\ge 7$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "$a_3=7$ 导致 $\\gcd(a_2,a_3)=\\gcd(4,7)>a_1=2$，矛盾"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "$a_3\\ge 8$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "comment": "结果对 n=0,1,2,3 成立, 作为归纳基础",
      "type": "Hint"
    },
    {
      "condition": [
        "$n\\ge 3$"
      ],
      "type": "Fix",
      "var_list": [
        "n"
      ]
    },
    {
      "assumption": [
        "$a_i\\ge 2^i\\;(0\\le i\\le n)$"
      ],
      "type": "Assume"
    },
    {
      "proposition": [
        "$a_{n+1}\\ge 2^{n+1}$"
      ],
      "type": "Show"
    },
    {
      "meaning": [
        "$d=\\gcd(a_n,a_{n+1})$"
      ],
      "symbol": "d",
      "type": "Define"
    },
    {
      "proposition": [
        "$d>a_{n-1}$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "comment": "分类讨论",
      "type": "Hint"
    },
    {
      "proposition": [
        "若 $a_{n+1}\\ge 4d$ 则 $a_{n+1}>4a_{n-1}\\ge 4\\cdot2^{n-1}=2^{n+1}$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "若 $a_n\\ge 3d$ 则 $a_{n+1}\\ge a_n+d\\ge 4d>4a_{n-1}\\ge 2^{n+1}$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "若 $a_n=d$ 则 $a_{n+1}\\ge a_n+d=2a_n\\ge 2\\cdot2^{n}=2^{n+1}$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "assumption": [
        "$a_n=2d,\\;a_{n+1}=3d$"
      ],
      "type": "Assume"
    },
    {
      "proposition": [
        "$a_{n+1}=\\tfrac32 a_n$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "meaning": [
        "$d'=\\gcd(a_{n-1},a_n)$"
      ],
      "symbol": "d'",
      "type": "Define"
    },
    {
      "proposition": [
        "$d'>a_{n-2}$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "condition": [
        "$a_n=m d'$"
      ],
      "type": "Fix",
      "var_list": [
        "m"
      ]
    },
    {
      "proposition": [
        "$d'\\le a_{n-1}<d,\\;a_n=2d\\ \\Rightarrow\\ m\\ge 3$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "$a_{n-1}<\\tfrac12 m d',\\;a_{n+1}=\\tfrac32 m d'$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "若 $m\\ge 6$ 则 $a_{n+1}=\\tfrac32 m d'\\ge 9d'>9a_{n-2}\\ge 2^{n+1}$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "若 $3\\le m\\le 4$ 则 $a_{n-1}=d',\\;a_{n+1}=\\tfrac32 m a_{n-1}\\ge\\tfrac32\\cdot3 a_{n-1}=\\tfrac92\\cdot2^{n-2}=2^{n+1}$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "assumption": [
        "$m=5$"
      ],
      "type": "Assume"
    },
    {
      "proposition": [
        "$a_n=5d',\\;a_{n+1}=\\tfrac{15}{2}d',\\;a_{n-1}<\\tfrac52 d'$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "$a_{n-1}$ 为 $d'$ 或 $2d'$, 因而 $a_n\\ge 2d'$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "meaning": [
        "$d''=\\gcd(a_{n-2},a_{n-1})$"
      ],
      "symbol": "d''",
      "type": "Define"
    },
    {
      "proposition": [
        "$d''>a_{n-3}$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "condition": [
        "$2d'=m'd''$"
      ],
      "type": "Fix",
      "var_list": [
        "m'"
      ]
    },
    {
      "proposition": [
        "$d''<a_{n-2}<d'\\ \\Rightarrow\\ m'\\ge 3$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "$a_{n-2}<\\tfrac12 m'd'',\\;a_{n+1}=\\tfrac{15}{4}m'd''$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "若 $m'\\ge 5$ 则 $a_{n+1}\\ge\\tfrac{75}{4}d''>\\tfrac{75}{4}a_{n-3}\\ge 2^{n+1}$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "若 $3\\le m'\\le 4$ 则 $a_{n-2}=d'',\\;a_{n+1}=\\tfrac{15}{4}m'a_{n-2}\\ge\\tfrac{45}{4}\\cdot2^{n-2}>2^{n+1}$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "所有情况均推出 $a_{n+1}\\ge 2^{n+1}$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "comment": "已无剩余情况, 归纳完成",
      "type": "Hint"
    },
    {
      "proposition": [
        "$a_{n+1}\\ge 2^{n+1}$"
      ],
      "reasons": [],
      "type": "Have"
    },
    {
      "proposition": [
        "$a_n\\ge 2^n\\;(\\forall n)$"
      ],
      "reasons": [],
      "type": "Have"
    }
  ]
}
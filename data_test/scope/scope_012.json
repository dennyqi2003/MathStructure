{
  "ProofStructure": [
    {
      "comment": "定义序列",
      "type": "Hint"
    },
    {
      "meaning": [
        "$y_n=\\left(1+\\frac{1}{n}\\right)^{n+1}$"
      ],
      "symbol": "y_n",
      "type": "Define"
    },
    {
      "proposition": [
        "序列 $y_n$ 单调递减"
      ],
      "scope": [
        {
          "condition": [
            "$n\\ge 2$"
          ],
          "scope": [
            {
              "comment": "利用伯努利不等式计算比值",
              "type": "Hint"
            },
            {
              "proposition": [
                "$\\displaystyle\\frac{y_{n-1}}{y_n}=\\left(1+\\frac{1}{n^2-1}\\right)^n\\cdot\\frac{n}{n+1}$"
              ],
              "reasons": [],
              "type": "Have"
            },
            {
              "proposition": [
                "$\\left(1+\\frac{1}{n^2-1}\\right)^n\\ge 1+\\frac{n}{n^2-1}$"
              ],
              "reasons": [
                "Bernoulli 不等式"
              ],
              "type": "Have"
            },
            {
              "proposition": [
                "$\\displaystyle\\frac{y_{n-1}}{y_n}\\ge \\left(1+\\frac{n}{n^2-1}\\right)\\cdot\\frac{n}{n+1}$"
              ],
              "reasons": [
                "前两式"
              ],
              "type": "Have"
            },
            {
              "proposition": [
                "$\\left(1+\\frac{n}{n^2-1}\\right)\\cdot\\frac{n}{n+1}>\\left(1+\\frac{1}{n}\\right)\\cdot\\frac{n}{n+1}$"
              ],
              "reasons": [
                "$\\frac{n}{n^2-1}>\\frac{1}{n}$"
              ],
              "type": "Have"
            },
            {
              "proposition": [
                "$\\left(1+\\frac{1}{n}\\right)\\cdot\\frac{n}{n+1}=1$"
              ],
              "reasons": [],
              "type": "Have"
            },
            {
              "proposition": [
                "$\\displaystyle\\frac{y_{n-1}}{y_n}>1$"
              ],
              "reasons": [
                "以上不等式"
              ],
              "type": "Have"
            },
            {
              "proposition": [
                "$y_{n-1}>y_n$"
              ],
              "reasons": [
                "两边同乘 $y_n>0$"
              ],
              "type": "Have"
            }
          ],
          "type": "Fix",
          "var_list": [
            "n"
          ]
        },
        {
          "proposition": [
            "序列 $y_n$ 单调递减"
          ],
          "reasons": [
            "$\\forall n\\ge 2,\\;y_{n-1}>y_n$"
          ],
          "type": "Have"
        }
      ],
      "type": "Show"
    }
  ]

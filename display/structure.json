{
  "ProofStructure": [
    {
      "type": "Show",
      "proposition": [
        "对$x^3-4x^2+2x+1$做因式分解"
      ],
      "scope": [
        {
          "type": "Fix",
          "var_list": [
            "a",
            "b"
          ],
          "condition": [
            "$x^3-4x^2+2x+1=(x-1)(x^2+ax+b)$",
            "观察到$\\exists x=1$使得$x^3-4x^2+2x+1=0$"
          ],
          "scope": [
            {
              "type": "Have",
              "proposition": [
                "$\\forall x \\in \\R$，$(x-1)(x^2+ax+b)=x^3+(a-1)x^2+(b-a)x-b$"
              ],
              "reasons": []
            },
            {
              "type": "Have",
              "proposition": [
                "$\\forall x \\in \\R$，$a-1=-4 \\land b-a=2 \\land -b=1$"
              ],
              "reasons": [
                "对比系数"
              ]
            },
            {
              "type": "Have",
              "proposition": [
                "$\\forall x \\in \\R$，$a=-3 \\land b=-1$"
              ],
              "reasons": [
                "解得"
              ]
            },
            {
              "type": "Have",
              "proposition": [
                "$\\forall x \\in \\R$，$x^3-4x^2+2x+1=(x-1)(x^2-3x-1)$"
              ],
              "reasons": [
                "于是"
              ]
            }
          ]
        }
      ]
    }
  ]
}